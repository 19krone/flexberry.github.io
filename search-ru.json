{% endunless %}{% endif %}{% endfor %}

{% for post in site.posts %}
{% if post.lang == "ru" %}
{
"title": "{{ post.title | escape }}",
"tags": "{{ post.tags }}",
"keywords": "{{post.keywords}}",
"url": "{{ post.url }}",
"summary": "{{post.summary | strip }}"
}
{% unless forloop.last %},{% endunless %}
{% endif %}
{% endfor %}
{ }
]